{
    "info": {
        "name": "Productos Service API",
        "description": "Colecci\u00f3n Postman para probar el servicio Productos.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Listar Productos",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-API-KEY",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/productos",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "productos"
                    ]
                }
            }
        },
        {
            "name": "Obtener Producto por ID",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-API-KEY",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/productos/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "productos",
                        "1"
                    ]
                }
            }
        },
        {
            "name": "Crear Producto",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "X-API-KEY",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"nombre\": \"Producto Ejemplo\",\n    \"descripcion\": \"Descripci\\u00f3n del producto\",\n    \"precio\": 99.99\n}"
                },
                "url": {
                    "raw": "{{base_url}}/productos",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "productos"
                    ]
                }
            }
        },
        {
            "name": "Actualizar Producto",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "X-API-KEY",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"nombre\": \"Producto Actualizado\",\n    \"descripcion\": \"Nueva descripci\\u00f3n\",\n    \"precio\": 150.5\n}"
                },
                "url": {
                    "raw": "{{base_url}}/productos/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "productos",
                        "1"
                    ]
                }
            }
        },
        {
            "name": "Eliminar Producto",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "X-API-KEY",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/productos/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "productos",
                        "1"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080"
        },
        {
            "key": "api_key",
            "value": "tu_api_key_aqui"
        }
    ]
}